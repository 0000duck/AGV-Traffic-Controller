<UserControl x:Class="AGV_Traffic_Controller.ucMaps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AGV_Traffic_Controller"
             mc:Ignorable="d">
    <Grid Background="{x:Null}">
        <Grid Margin="0, 0,0, 0" Width="300" Background="SteelBlue" HorizontalAlignment="Left">
            <Label Content="Mapas" Margin="0,0,0,0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <ListBox Margin="10,35"       BorderBrush="#FFE5E5E5" Width="280" Height="200" VerticalAlignment="Top" HorizontalAlignment="Left" Background="White" FontSize="16" Foreground="White"/>
            <Button x:Name="btnAdd"     Content="Agregar"       Foreground="White" Background="Gray" BorderBrush="Gray" Margin="3,240,0,-6.4" Width="90" Height="31" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" FontFamily="Calibri"/>
            <Button x:Name="btnDelete"  Content="Borrar"        Foreground="White" Background="Gray" BorderBrush="Gray" Margin="96,240,0,-6.4" Width="90" Height="31" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" FontFamily="Calibri"/>
            <Button x:Name="btnSelect"  Content="Seleccionar"   Foreground="White" Background="Gray" BorderBrush="Gray" Margin="206,240,0,-6.4" Width="90" Height="31" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" FontFamily="Calibri"/>

        </Grid>
        <Grid Margin="300, 0, 0, 0">
            <ToolBar Name="MyToolbar" Margin="0,0,0,0" Height="55" VerticalAlignment="Top" BorderBrush="#FF969696" Background="Gray">
                <RadioButton Name="btnNode" BorderBrush="#FF969696" Content="Nodo" Height="55" Width="130" GroupName="ShapeGroup" Click="EllipseButton_Click" IsChecked="True" Foreground="White" FontFamily="Calibri" FontSize="20"/>
                <RadioButton Name="btnEdge" BorderBrush="#FF969696" Content="Arista" Height="55" Width="130" GroupName="ShapeGroup" Click="LineButton_Click" Foreground="White" FontFamily="Calibri" FontSize="20" />
            </ToolBar>
            <Canvas Name="MyCanvas" Margin="0,56,0,0" Background="White" MouseDown="MyCanvas_MouseDown" MouseUp="MyCanvas_MouseUp" MouseMove="MyCanvas_MouseMove"/>
        </Grid>
    </Grid>
</UserControl>