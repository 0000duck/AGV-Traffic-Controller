        <Grid Margin="0,82,0,0" Background="LightGray">
            <Button x:Name="btnOK"  Content="OK"  Width="75" Height="25" FontFamily="Calibri" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnOK_Click" Margin="206,12.5,0,0"/>
        </Grid>
    </Grid>
